<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuControlActivity">


    <TableLayout
        android:layout_width="368dp"
        android:layout_height="497dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/titleEstadoSistema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Estado del sistema"
                android:textSize="20sp"

                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/switchSistema"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:text="Sistema"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/switchDebug"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:text="Modo Debug"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/titleEstadoAlertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:text="Estado de sensores"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewTemperatura"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:text="Temperatura: "
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewMovimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detección de movimiento: "
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewLuz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de luz:"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewFuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detección de fuego:"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/titleEstadoActuadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Estado de los actuadores"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/switchVentilador"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:text="Ventilador"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/switchBuzzer"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:text="Buzzer"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/switchTraba"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:text="Traba"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="117dp"
            tools:layout_editor_absoluteX="360dp"
            tools:layout_editor_absoluteY="332dp">

            <TableRow
                android:layout_width="253dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnNotif"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/icono_notif" />

                <ImageButton
                    android:id="@+id/btnSolAcceso"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/icono_solacc" />
            </TableRow>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textViewSolAcc"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:text="Solicitudes de Acceso"
                    android:textAlignment="center" />
            </TableRow>

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>